#include <iostream>
#include <string>
using namespace std;
int main() 
{
    string string1,string2,string3;
    char a,b;
    int length1,length2;
    cin>>string1;
    cin>>string2;
    length1 = string1.size();
    length2 = string2.size();
    cout<<length1;
    cout<<" "<<length2;
    string3 = string1+string2;
    cout<<"\n"<<string3;
    a = string2[0];
    b = string1[0];        
    string1[0] = a;
    string2[0] = b;
    cout<<"\n";
    cout<<string1;
    cout<<" "<<string2;
    return 0;
}
